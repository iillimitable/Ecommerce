<%- layout('layouts/boilerplate') -%>
<style>
  .form1 {
    margin-top: 6.5rem;
    justify-content: center;
    max-width: 50%;
  }

  /* Style for the form container */
.form1 {
  max-width: 400px;
  margin: 150px auto;
  padding: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
  background-color: #f5f5f5;
}

/* Style for form labels */
.form-label {
  font-weight: bold;
}

/* Style for form inputs and textareas */
.form-control {
  width: 100%;
  padding: 8px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 3px;
}

/* Style for input group */
.input-group {
  width: 100%;
}

/* Style for input group text (e.g., $ sign) */
.input-group-text {
  background-color: #f5f5f5;
  border: 1px solid #ccc;
  border-right: none;
  border-radius: 3px 0 0 3px;
  padding: 8px;
}

/* Style for submit button */
.btn-primary {
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 3px;
  padding: 10px 20px;
  cursor: pointer;
}

.btn-primary:hover {
  background-color: #0056b3;
}

</style>








<form class="form1" action="/products/<%= product._id %>?_method=PATCH" method="POST">

    <h3>Edit section</h3>

  <div class="mb-3">
    <label for="name" class="form-label"> product Name</label>
    <input type="text" class="form-control" id="name" aria-describedby="emailHelp" value="<%= product.name %>" placeholder="name" name="name"/>
  </div>

  <div class="mb-3">
    <label for="img" class="form-label">image</label>
    <input type="text" class="form-control" id="img" value="<%= product.img %>" placeholder="image url" name="img" />
  </div>

  <div class="mb-3">
    <label for="price" class="form-label">price</label>
    <div class="input-group">
      <span class="input-group-text">$</span>
      <input type="text" class="form-control" id="img" placeholder="price" value="<%= product.price %>" name="price" />
    </div>

  </div>
  <div class="mb-3">
    <label for="desc" class="form-label">descripation</label>
    <input type="text" class="form-control" id="img" placeholder="descraption" value="<%= product.desc %>" name="desc" />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
 