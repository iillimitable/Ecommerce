<% layout('layouts/boilerplate') -%>

<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f5f5f5;
  }
  
  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }
  
  .card {
    border: 1px solid #ccc;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  }
  
  .card-img-top {
    width: 100%;
    height:40vh;

  }
  
  .card-body {
    padding: 1.25rem;
  }
  
  .card-title {
    font-size: 1.25rem;
    margin: 0;
  }
  
  .card-text {
    font-size: 1rem;
    color: #555;
    margin-top: 10px;
  }
  
  .btn1,
  .btn2,
  .btn3,
  .btn4 {
    display: inline-block;
    padding: 0.5rem 1rem;
    margin: 5px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    font-size: 0.9rem;
    transition: background-color 0.3s ease;
  }
  
  .btn1,
  .btn2 {
    background-color: #007bff;
    color: #fff;
  }
  
  .btn3 {
    background-color: #dc3545;
    color: #fff;
  }
  
  .btn4 {
    background-color: #28a745;
    color: #fff;
  }
  
  .btn1:hover,
  .btn2:hover,
  .btn3:hover,
  .btn4:hover {
    background-color: #0056b3;
  }
  
</style>



  <div class="row">
    <div class="container">
      <div class="card" style="width: 20rem;">
        <img src="<%= product.img %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            <%= product.name %>
          </h5>
          <h5>$ <%= product.price %>
          </h5>
          <p class="card-text">
            <%= product.desc %>
          </p>
          <a href="#" class="btn1>Buy Now</a>
          <a href="#" class="btn2">Add to Cart</a>
          <a href="/products/<%= product._id %>/edit" class="btn4">Edit</a>
          <form class="d-inline" action="/products/<%= product.id %>?_method=DELETE" method="post">
            <button class="btn3">Delete</button>
          </form>
        </div>
      </div>
    </div>