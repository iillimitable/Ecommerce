<%- layout('layouts/boilerplate') -%>

<style>
  /* Reset some default styling */
  /* Reset some default styles */
  body,
  h1,
  h2,
  p,
  ul,
  li {
    margin:100px,auto;
    padding: 0;
  }

  /* Global styles */
  body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
  }

  header {
    background-color: #333;
    color: #fff;
    padding: 10px 0;
  }

  nav ul {
    list-style: none;
    display: flex;
    justify-content: center;
  }

  nav a {
    text-decoration: none;
    color: #fff;
    margin: 0 15px;
  }

  /* Hero section */
  .hero {
    background-image: url("https://images.unsplash.com/photo-1682685797406-97f364419b4a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDF8MHxlZGl0b3JpYWwtZmVlZHw2MXx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=500&q=60");
    background-size: cover;
    background-position: center;
    text-align: center;
    padding: 100px 0;
    color: #fff;
  }

  .hero h1 {
    font-size: 36px;
    margin-bottom: 20px;
  }

  .btn {
    display: inline-block;
    background-color: #007bff;
    color: #fff;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
  }

  /* About section */
  .about {
    display: flex;
    align-items: center;
    padding: 50px 0;
  }

  .about-content {
    flex: 1;
    padding: 0 30px;
  }

  .about h2 {
    font-size: 28px;
    margin-bottom: 15px;
  }
  .containr {
    margin: 107px auto;
  }

  /* Footer */
  footer {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 10px 0;
  }
</style>

<div class="containr">
  <header>
    <nav>
      <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">About</a></li>
        <li><a href="#">Services</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
    </nav>
  </header>

  <section class="hero">
    <h1>Welcome to My Website</h1>
    <p>Your go-to destination for amazing content.</p>
    <a href="#" class="btn">Explore More</a>
  </section>

  <section class="about">
    <div class="about-content">
      <h2>About Us</h2>
      <p>
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean egestas
